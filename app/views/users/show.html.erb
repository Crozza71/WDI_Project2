<%= image_tag @user.profile_picture, width: 100, height: 100 %>
<h2><%= @user.username %></h2>
<h4><%= @user.first_name %> <%= @user.last_name %></h4>


<h5>Recent Quotes</h5>

<% @quotes.each do |quote| %>
  <div class="quotetext">
    <% if quote.image %>
      <li><%= image_tag quote.image, width: 80, height: 80%></li>
    <% end %>
    <li> <%= quote.body %></li>
  </div>
<% end %>