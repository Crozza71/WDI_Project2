<%= image_tag @user.profile_picture, width: 100, height: 100 %>
<h2><%= @user.username %></h2>
<h4><%= @user.first_name %> <%= @user.last_name %></h4>


<h5>Recent Quotes</h5>


<ul>
  <li>
    <% @quotes.each do |quote| %>
      <ul class="card">
        <div class="text">
          <div class="speech-bubble">
            <li><p><%= quote.body %></p></li>
          </div>
      </ul>  
  </li>
</ul>  
  <div class="quotetext">
    <% if quote.image.to_s != "" %>
      <li><%= image_tag quote.image, width: 60, height: 60%></li>
    <% end %>
    <li><%= link_to "edit", edit_quote_path(quote) %></li>
    <li><%= link_to "delete", quote_path(quote), method: "delete" %></li>
  </div>
<% end %>