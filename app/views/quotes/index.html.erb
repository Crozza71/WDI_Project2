<p id="notice"><%= notice %></p>

<h1>Listing Quotes</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Culprit</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td> <%= quote.body %></td>
        <td><a href="<%= query_path(quote.culprit) %>"><%= quote.culprit %></a> </td>
        <td><%= quote.date %></td>
        <td><%= quote.image %></td>
        <td><%= image_tag quote.image.thumbnail.url %></td>

        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

